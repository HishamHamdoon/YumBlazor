<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Title</h5>
                <button type="button" class="btn-close btn-lg" data-bs-dismiss="modal" aria-label="Close"
                        @onclick="()=>OnModalconfirmationClicked(false)"></button>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-info btn-lg" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn @ButtonBootstrapStyle"
                        @onclick="()=>OnModalconfirmationClicked(true)">
                    Delete
                </button>
            </div>
            
        </div>
    </div>
</div>
@code{
    [Parameter]
    public EventCallback<bool> OnModalconfirmation { get; set; }
    private async Task OnModalconfirmationClicked(bool vale)
    {
        if (vale)
        {
            await OnModalconfirmation.InvokeAsync(true);
        }
    }
    [Parameter]
    public string Title { get; set; } = "Please confirm";
    [Parameter]
    public string ButtonBootstrapStyle { get; set; } = "btn-primary";
    [Parameter]
    public string ButtonText { get; set; } = "Confirm";

}